<% if current_user %>
<div id="user_info">
  <p>User: <%= current_user.name %></p>
</div>
<div id="bugs">
  <!--<%= button_to "New Bug", new_bug_path, method: :get %>-->

  <div id="new_bug">
    <%= link_to new_bug_path do %>
    <div id="bug_press">
      <i class="fa fa-bug" aria-hidden="true" style="font-size:48px;"></i>
      <p> New Bug </p>
    </div>
    <% end %>
  </div>
  <div id="reported_bugs">
    <h2>Reported Bugs</h2>
    <% if @bugs.any?%>

    <% @bugs.each do |b| %>
    <%=render 'bug_loop', b: b %>
    <% end %>

  </div>
  <div id="your_bugs">
    <h2>Your Bugs</h2>
    <% if @bugs.any?%>

    <% @bugs.each do |b| %>
    <% if current_user.name == User.find(b.user_id).name%>
    <%=render 'bug_loop', b: b %>
    <% end %>
    <% end %>
    <%end%>
  </div>
  <% end %>
</div>
<% else %>
<h1>Please Register or Sign In</h1>
<% end %>
